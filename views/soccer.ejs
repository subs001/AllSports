<!-- Soccer matches of a particular competitoin -->
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soccer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.min.js" integrity="sha384-5h4UG+6GOuV9qXh6HqOLwZMY4mnLPraeTrjT5v07o347pj6IkfuoASuGBhfDsp3d" crossorigin="anonymous"></script><link rel="stylesheet" href="./style.css">
    <link rel="stylesheet" href="/styles.css">
    <style>
        button:active {
            border-style: outset;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/index">
            <img src="/images/trophy.png" alt="" width="30" height="25" class="d-inline-block align-top">
            AllSports
          </a>
        </div>
    </nav>
    <!-- score/news selector -->
    <div class="text-center" style="margin-bottom: 35px;">
        <div class="btn-group mx-auto" role="group" style="width: 50%;">
            <button type="button" class="btn btn-secondary shadow-none" onclick="scoreShow()">Scores</button>
            <button type="button" class="btn btn-secondary shadow-none" onclick="newsShow()">Soccer News</button>
        </div>
    </div>
    <!-- divsnews -->
    <div class="container" id="soccerNews" style="display: none;">
        <!--Grid row-->
        <div class="row">
          <div class="col-md-9 mb-4">
            <section>
              <% for(i=0;i<4;i++){  %>
              <!-- Individual Post -->
              <div class="row center">
                <div class="col-md-4 mb-4">
                  <div class="bg-image hover-overlay shadow-1-strong rounded ripple" data-mdb-ripple-color="light">
                    <img src="<%= news[i]['urlToImage'] %> " class="img-fluid"  alt="Image not Found"/>
                    <a href="#!">
                      <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                    </a>
                  </div>
                </div>
  
                <div class="col-md-8 mb-4">
                  <h5><%= news[i]['title'] %></h5>
                  <p>
                    <%- news[i]['description']  %>
                  </p>
  
                  <a href="<%= news[i]['url'] %>"><button type="button" class="btn btn-primary">Read</button></a>
                </div>
              </div>
              <% }%>
            </section>
          </div>
        </div>
      </div>
    <!-- Score Table -->
    <div class="container" id="soccerScores">
        <table class="table table-dark table-striped">
            <tr>
                <td>Date</td>
                <td>Home Team</td>
                <td>Score</td>
                <td>Away Team</td>
                <td>Score</td>
                <td>Status</td>
                <td>Winner</td>
            </tr>
            <% for(var key of Object.keys(data['matches'])){ %>
                    <tr>
                        <td>
                            <%= data['matches'][key]['utcDate'].substring(0,10) %>
                        </td>
                        <td>
                            <%= data['matches'][key]['homeTeam']['name'] %>
                        </td>
                        <td>
                            <%= data['matches'][key]['score']['fullTime']['homeTeam'] %>
                        </td>
                        <td>
                            <%= data['matches'][key]['awayTeam']['name'] %>
                        </td>
                        <td>
                            <%= data['matches'][key]['score']['fullTime']['awayTeam'] %>
                        </td>
                        <td>
                            <%= data['matches'][key]['status'] %>
                        </td>
                        <td>
                            <% if(data['matches'][key]['score']['winner']=='HOME_TEAM'){ %>
                                <%= data['matches'][key]['homeTeam']['name'] %>
                            <% } %>
                            <% if(data['matches'][key]['score']['winner']=='AWAY_TEAM'){ %>
                                <%= data['matches'][key]['awayTeam']['name'] %>
                            <% } %>
                            <% if(data['matches'][key]['score']['winner']=='DRAW'){ %>
                                <%= 'DRAW' %>
                            <% } %>
                        </td>
                    </tr>
                
            <% } %> 
        </table>
    </div>
</body>
<script defer>
    scores = document.getElementById('soccerScores');
    news = document.getElementById('soccerNews');

    function scoreShow(){
        scores.style.display = "block";
        news.style.display = "none";
    }
    function newsShow(){
        scores.style.display = "none";
        news.style.display = "block";
    }
</script>
</html>