<!DOCTYPE html>
<html lang="en" xml:lang="en" xmlns= "http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Basketball Scores</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.min.js" integrity="sha384-5h4UG+6GOuV9qXh6HqOLwZMY4mnLPraeTrjT5v07o347pj6IkfuoASuGBhfDsp3d" crossorigin="anonymous"></script><link rel="stylesheet" href="./style.css">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/toggle.css">
    <style>
      html, body{
        height: 100%;
      }
    </style>
</head>
<body >
 
    
    <!-- Navbar -->
    
    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/index">
          <!-- Allsports Logo -->
          <img src="/images/trophy.png" alt="" width="30" height="25" class="d-inline-block align-top">
          AllSports
        </a>
        <a class="navbar-brand" href="/profile" style="margin-left: 80%;" >Profile</a>
        <a class="navbar-brand" href="/basketball"><img src="/images/basketball-nav.png" alt="" class="nav-img"></a>
        <a class="navbar-brand" href="/soccer"><img src="/images/soccer-nav.png" alt="" class="nav-img"></a>
        <a class="navbar-brand" href="/hockey"><img src="/images/hockey-nav.png" alt="" class="nav-img"></a>
      </div>
    </nav>

  
  <!-- End of Navbar -->
  
  <div style="background-color: rgb(3, 15, 26); height: 100%; min-height: 1400px;">

    <!-- score/news selector -->
    <div class="text-center" style="margin-bottom: 35px; padding-top: 35px;">
      <div class="btn-group mx-auto" role="group" style="width: 50%;">
          <button type="button" id="scorebtn" class="btn btn-light" onclick="scoreShow()">Scores</button>
          <button type="button" id="newsbtn" class="btn btn-dark" onclick="newsShow()">News</button>
      </div>
    </div>
    <!-- divsnews -->

    
     
    <div class="container basketball-score-card" id="scores">
    <table class="table table-striped table-dark table-hover table-borderless" id="bball-scores">
        <thead >
        <tr>
           <td colspan="7" style="padding: 2rem 0rem 1rem 0rem"><img src="/images/NBA_Logos-master/new_team.png" width="100" alt=""></td>
        </tr>
        </thead>
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Home Team</th>
            <th scope="col">Score</th>
            <th scope="col">Away Team</th>
            <th scope="col">Score</th>
            <th scope="col">Status</th>
            <th scope="col">Discussion</th>
          </tr>
        </thead>
        <tbody>
            
            <% for(var key of Object.keys(data['data'])){ %>
            <tr>
                <% var teamLogo1 = "/images/NBA_Logos-master/" + data['data'][key]['home_team']["abbreviation"] + ".png";%>
                <% var teamLogo2 = "/images/NBA_Logos-master/" + data['data'][key]['visitor_team']["abbreviation"] + ".png";%>
                <th scope="row"><%= data['data'][key]['date'].toString().slice(0,10)%></th>
                <td><img src=<%=teamLogo1  %> width="30"  alt="home_team">      <%= data['data'][key]['home_team']["full_name"]%></td>
                <td><%= data['data'][key]['home_team_score']%></td>                
                <td><img src=<%=teamLogo2  %> width="30"  alt="home_team">      <%= data['data'][key]['visitor_team']['full_name']%></td>
                <td><%= data['data'][key]['visitor_team_score']%></td>
                <td><%= data['data'][key]['status']%></td>
                <form action="/gameComments1" method="POST">
                  <input type="hidden" name="gameID" value="<%= data['data'][key]['id'] %> ">
                  <input type="hidden" name="gameDetail" value="<%= data['data'][key]['home_team']["full_name"]+'-'+ data['data'][key]['visitor_team']['full_name']+'-'+ data['data'][key]['home_team_score'] +'-' + data['data'][key]['visitor_team_score']; %>">
                <td><a href="#" ><button class="btn-primary" style="border-radius: 10px;">GO</button></a></td>
                </form>  
              </tr>
              <% } %> 
            </tbody>
    </table>
    </div>

    <!-- News -->
    <div id="news"  style="display: none; margin-top: 20px;">  
      <!-- divsnews -->
      <div class="container" style="padding-top: 25px;background-color: whitesmoke;">
        <!--Grid row-->
        <div class="row">
          <div class="col-md-12 mb-4">
            <section>
              <% for(i=0;i<4;i++){  %>
              <!-- Individual Post -->
              <div class="row center" style="margin-bottom: 20px;">
                <div class="col-md-4 mb-4">
                  <div class="bg-image hover-overlay shadow-1-strong rounded ripple" data-mdb-ripple-color="light">
                    <img src="<%= news[i]['urlToImage'] %> " class="img-fluid"  alt="Image not Found"/>
                    <a href="#!">
                      <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                    </a>
                  </div>
                </div>

                <div class="col-md-8 mb-4">
                  <h5><%= news[i]['title'] %></h5>
                  <p>
                    <%= news[i]['description']  %>
                  </p>
                  <a href="<%= news[i]['url'] %>" target="_blank"><button type="button" class="btn btn-primary">Read</button></a>
                </div>
              </div>
              <% }%>
            </section>
          </div>
        </div>
      </div>
    </div>

  </div>
  </body>
  <script defer>
    scores = document.getElementById('scores');
    news = document.getElementById('news')
    sbtn = document.getElementById('scorebtn');
    nbtn = document.getElementById('newsbtn');
    function scoreShow(){
        scores.style.display = "block";
        news.style.display = "none";
        sbtn.className = 'btn btn-light';
        nbtn.className = 'btn btn-dark';
        
    }
    function newsShow(){
        scores.style.display = "none";
        news.style.display = "block";
        nbtn.className = 'btn btn-light';
        sbtn.className = 'btn btn-dark';

    }
  </script>
</html>
